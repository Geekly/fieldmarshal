<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="FieldMarshalPU2" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>net.geeklythings.fieldmarshal.entity.Tournament</class>
    <class>net.geeklythings.fieldmarshal.entity.Round</class>
    <class>net.geeklythings.fieldmarshal.entity.EventFormat</class>
    <class>net.geeklythings.fieldmarshal.entity.Player</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/fieldmarshaldb2"/>
      <property name="javax.persistence.jdbc.password" value="fieldmarshal"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.user" value="fieldmarshal"/>
      <property name="eclipselink.logging.level" value="INFO"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="both"/>
    </properties>
  </persistence-unit>
</persistence>
